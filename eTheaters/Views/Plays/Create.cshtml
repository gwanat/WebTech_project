@model NewPlayVM
@using eTheaters.Data.Enums
@{
    ViewData["Title"] = "Create a new play";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h4>Create a new play</h4>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="from-group mb-3">
                                <label asp-for="Name" class="control-label"> </label>
                                <input asp-for="Name" class="form-control"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="StartDate" class="control-label"> </label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="EndDate" class="control-label"> </label>
                                <input asp-for="EndDate"  type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="Price" class="control-label"> </label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="ImageURL" class="control-label"> </label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="from-group mb-3">
                                <label asp-for="TheaterId" class="control-label"> </label>
                                <select asp-for="TheaterId" class="form-control" asp-items="ViewBag.Theaters"></select>
                                <span asp-validation-for="TheaterId" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="PlayCategory" class="control-label"> </label>
                                <select asp-for="PlayCategory" class="form-control" asp-items="Html.GetEnumSelectList<PlayCategory>()"></select>
                                <span asp-validation-for="PlayCategory" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="DirectorId" class="control-label"> </label>
                                <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.Directors"></select>
                                <span asp-validation-for="DirectorId" class="text-danger"></span>
                            </div>
                            <div class="from-group mb-3">
                                <label asp-for="ActorIds" class="control-label"> </label>
                                <select asp-for="ActorIds" class="form-control" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12 ">
                            <div class="from-group">
                                <label asp-for="Description" class="control-label"> </label>
                                <textarea asp-for="Description" class="form-control" multiple></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center my-3">
                        <img width="100%" id="ImageUrlPreview"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary mx-3" asp-action="Index" asp-controller="Play">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}