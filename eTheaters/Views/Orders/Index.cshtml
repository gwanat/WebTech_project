@model List<Order>

@{
    ViewData["Title"] = "All orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h4>List of all your orders</h4>
        </div>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Order ID</th>
                    <th>Items</th>
                    <th>Total</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>User</th>
                    }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                        <td class="align-middle text-center">@order.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success text-white">@item.Amount</span> [@item.Price.ToString("c")] - @item.Play.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle text-center">
                            @order.OrderItems.Select(p => p.Play.Price * p.Amount).Sum().ToString("c")
                        </td>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle text-center"> @order.User.FullName </td>
                        }
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>